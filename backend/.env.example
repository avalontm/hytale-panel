# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:5173

# Hytale Server Settings
SERVER_PATH=/opt/hytale-server
START_COMMAND=java -Xmx2G -Xms1G -jar hytale-server.jar nogui
JAR_FILE=hytale-server.jar
PLUGINS_DIR=plugins
WORLDS_DIR=worlds
BACKUP_DIR=backups

# Memory Settings
MAX_MEMORY=2G
MIN_MEMORY=1G

# Auto-shutdown (optional)
AUTO_SHUTDOWN=false
IDLE_TIME=300000
